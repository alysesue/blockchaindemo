@using Microsoft.AspNetCore.Mvc.ViewFeatures
@model HomeIndexViewModel

<header class="masthead" style="height:100%">
    <div class="container h-100">
        <div class="row h-100">
            <div class="col-lg-12">
                <div class="header-content mx-auto mb-5" style="height:480px; margin-top:250px">
                    <div>
                        <h4 class="mb-5">This interactive blockchain demo will provide an easy-to-understand introduction to blockchains, cryptocurrencies and wallets</h4>
                        <p>Begin Demo</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row h-100">
            <div class="col-lg-7">
                <div class="header-content mx-auto mt-5 mb-5">
                    <div>
                        @{
                            HomeAddBlockViewModel addBlock = new HomeAddBlockViewModel();
                            Html.RenderPartial("~/Views/Home/AddBlock.cshtml", addBlock);
                        }
                    </div>
                    <div>
                        @Html.Partial("DisplayBlocks", Model)
                    </div>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="device-container">
                    <div class="device-mockup iphone6_plus portrait white">
                        <div class="device">
                            <div class="screen">
                                <div class="col-md mt-5">
                                    <div class="card" style="width:100%; background-color:lightgrey; border:dashed; border-color:darkblue">
                                        <div class="card-body">
                                            <h5 class="card-title" style="color:darkblue">Adding blocks explained</h5>
                                            <p style="color:darkblue; font-size:14px">BLOCKS</p>
                                            <ul class="card-text" style="color:darkblue; font-size:14px">
                                                <li>A block contains the following information: current hash, previous hash, data and timestamp</li>
                                                <li>Block 0 is the genesis block or first block</li>
                                                <li>The previous hash is the current hash of the previous block</li>
                                                <li>The hash is created from all block information</li>
                                                <li>If information in the block changes, the hash will not be valid. The hashes of previous blocks is also rendered invalid.</li>
                                            </ul>
                                            <p style="color:darkblue; font-size:14px">BLOCKCHAIN</p>
                                            <ul class="card-text" style="color:darkblue; font-size:14px">
                                                <li>A chain of blocks is formed as blocks are added, connected via the previous hash</li>
                                                <li>A blockchain is made up of a network of decentralised nodes or computers</li>
                                                <li>A blockchain can serve as a database of transactional information that is synced across all nodes in the network</li>
                                                <li>When a transaction is performed, it is relayed across the network. If the transaction is deemed valid, the transaction information will be included in the next block</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="button">
                                <!-- You can hook the "home button" to some JavaScript events or just remove it -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>


